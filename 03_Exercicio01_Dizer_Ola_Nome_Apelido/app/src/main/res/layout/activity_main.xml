<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="157dp"
        android:layout_marginBottom="42dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Insira o seu nome"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/edit_apelido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_apelido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Insira o seu apelido"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/button_dizer_ola"
        app:layout_constraintStart_toStartOf="@+id/edit_nome"
        app:layout_constraintTop_toBottomOf="@+id/edit_nome" />

    <Button
        android:id="@+id/button_dizer_ola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="49dp"
        android:text="DIZER OLÁ"
        app:layout_constraintBottom_toTopOf="@+id/text_resultado"
        app:layout_constraintEnd_toEndOf="@+id/edit_apelido"
        app:layout_constraintTop_toBottomOf="@+id/edit_apelido" />

    <TextView
        android:id="@+id/text_resultado"
        android:layout_width="181dp"
        android:layout_height="0dp"
        android:layout_marginBottom="131dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_dizer_ola" />
</androidx.constraintlayout.widget.ConstraintLayout>